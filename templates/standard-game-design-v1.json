{
  "id": "standard-game-design-v1",
  "name": "Standard Game Design Pipeline",
  "description": "Balanced 12-stage pipeline for games with multiple systems, progression, or light economy",
  "version": "1.0.0",
  "category": "game-development",
  "stages": [
    {
      "id": "lore_architect",
      "name": "Lore Architect",
      "type": "designer",
      "agent": "lore_architect",
      "description": "Creates basic world context and setting (kept minimal)",
      "phase": "world_building"
    },
    {
      "id": "system_designer",
      "name": "System Designer",
      "type": "designer",
      "agent": "system_designer",
      "description": "Identifies all game systems and their interactions",
      "phase": "systems_design",
      "inputs": ["lore_architect"]
    },
    {
      "id": "combat_designer",
      "name": "Combat/Core Mechanics Designer",
      "type": "designer",
      "agent": "combat_designer",
      "description": "Designs core gameplay mechanics and interactions",
      "phase": "systems_design",
      "inputs": ["system_designer"]
    },
    {
      "id": "progression_designer",
      "name": "Progression Designer",
      "type": "designer",
      "agent": "progression_designer",
      "description": "Designs leveling, unlocks, and advancement systems",
      "phase": "systems_design",
      "inputs": ["combat_designer"]
    },
    {
      "id": "balance_analyzer",
      "name": "Balance Analyzer",
      "type": "reviewer",
      "agent": "balance_analyzer",
      "description": "Validates game balance and fairness",
      "phase": "systems_design",
      "inputs": ["progression_designer"]
    },
    {
      "id": "systems_integrator",
      "name": "Systems Integrator",
      "type": "integrator",
      "agent": "systems_integrator",
      "description": "Combines all systems into cohesive design",
      "phase": "integration",
      "inputs": ["balance_analyzer"]
    },
    {
      "id": "data_modeler",
      "name": "Data Modeler",
      "type": "executor",
      "agent": "data_modeler",
      "description": "Creates data schemas and structures",
      "phase": "implementation",
      "inputs": ["systems_integrator"]
    },
    {
      "id": "api_designer",
      "name": "API Designer",
      "type": "executor",
      "agent": "api_designer",
      "description": "Designs system interfaces and APIs",
      "phase": "implementation",
      "inputs": ["data_modeler"]
    },
    {
      "id": "code_generator",
      "name": "Code Generator",
      "type": "executor",
      "agent": "code_generator",
      "description": "Generates implementation code",
      "phase": "implementation",
      "inputs": ["api_designer"]
    },
    {
      "id": "technical_validator",
      "name": "Technical Validator",
      "type": "validator",
      "agent": "technical_validator",
      "description": "Validates technical implementation quality",
      "phase": "validation",
      "inputs": ["code_generator"]
    },
    {
      "id": "gameplay_validator",
      "name": "Gameplay Validator",
      "type": "validator",
      "agent": "gameplay_validator",
      "description": "Validates gameplay matches design",
      "phase": "validation",
      "inputs": ["code_generator"]
    },
    {
      "id": "final_integrator",
      "name": "Final Integrator",
      "type": "validator",
      "agent": "final_integrator",
      "description": "Final validation and launch readiness",
      "phase": "validation",
      "inputs": ["technical_validator", "gameplay_validator"]
    }
  ],
  "flow": {
    "type": "conditional",
    "description": "Balanced flow with moderate feedback loops",
    "connections": [
      {
        "from": "lore_architect",
        "to": "system_designer",
        "condition": "context_complete",
        "description": "World context established, design systems"
      },
      {
        "from": "system_designer",
        "to": "combat_designer",
        "condition": "systems_identified",
        "description": "Systems identified, design core mechanics"
      },
      {
        "from": "combat_designer",
        "to": "progression_designer",
        "condition": "mechanics_complete",
        "description": "Core mechanics done, design progression"
      },
      {
        "from": "combat_designer",
        "to": "system_designer",
        "condition": "needs_revision",
        "description": "Mechanics need system changes"
      },
      {
        "from": "progression_designer",
        "to": "balance_analyzer",
        "condition": "progression_complete",
        "description": "Progression done, analyze balance"
      },
      {
        "from": "balance_analyzer",
        "to": "systems_integrator",
        "condition": "approved",
        "description": "Balance approved, integrate systems"
      },
      {
        "from": "balance_analyzer",
        "to": "combat_designer",
        "condition": "needs_tuning",
        "description": "Balance issues, tune mechanics"
      },
      {
        "from": "balance_analyzer",
        "to": "progression_designer",
        "condition": "progression_issue",
        "description": "Progression balance issue"
      },
      {
        "from": "systems_integrator",
        "to": "data_modeler",
        "condition": "integration_complete",
        "description": "Systems integrated, model data"
      },
      {
        "from": "systems_integrator",
        "to": "combat_designer",
        "condition": "conflict_found",
        "description": "System conflict, revise mechanics"
      },
      {
        "from": "data_modeler",
        "to": "api_designer",
        "condition": "schemas_complete",
        "description": "Data models ready, design APIs"
      },
      {
        "from": "api_designer",
        "to": "code_generator",
        "condition": "apis_complete",
        "description": "APIs designed, generate code"
      },
      {
        "from": "code_generator",
        "to": "technical_validator",
        "condition": "code_complete",
        "description": "Code generated, validate technically"
      },
      {
        "from": "code_generator",
        "to": "gameplay_validator",
        "condition": "code_complete",
        "description": "Code generated, validate gameplay"
      },
      {
        "from": "technical_validator",
        "to": "final_integrator",
        "condition": "approved",
        "description": "Technical validation passed"
      },
      {
        "from": "technical_validator",
        "to": "code_generator",
        "condition": "needs_revision",
        "description": "Technical issues, regenerate"
      },
      {
        "from": "gameplay_validator",
        "to": "final_integrator",
        "condition": "approved",
        "description": "Gameplay validation passed"
      },
      {
        "from": "gameplay_validator",
        "to": "code_generator",
        "condition": "needs_work",
        "description": "Gameplay issues, fix code"
      },
      {
        "from": "final_integrator",
        "to": "final_integrator",
        "condition": "approved_for_launch",
        "description": "PIPELINE COMPLETE - Ready for launch!"
      },
      {
        "from": "final_integrator",
        "to": "code_generator",
        "condition": "needs_polish",
        "description": "Polish needed, iterate"
      },
      {
        "from": "final_integrator",
        "to": "systems_integrator",
        "condition": "design_issue",
        "description": "Design issue found, re-integrate"
      }
    ]
  },
  "success_criteria": {
    "final_verdict": "APPROVED_FOR_LAUNCH",
    "all_validations": "passed",
    "implementation_complete": true
  },
  "use_cases": [
    "Platformers with level progression",
    "Tower defense games",
    "Match-3 with upgrades",
    "Simple RPGs with quests",
    "Racing games with unlocks",
    "Roguelites with basic progression"
  ],
  "example_prompts": [
    "A platformer with 20 levels and collectible power-ups",
    "Tower defense game with upgradeable towers",
    "Match-3 puzzle game with daily challenges",
    "Simple dungeon crawler with loot and leveling"
  ],
  "metadata": {
    "total_agents": 12,
    "feedback_loops": 10,
    "max_depth": 3,
    "estimated_runtime": "4-6 hours",
    "recommended_for": "Small indie games, games with moderate complexity"
  }
}
