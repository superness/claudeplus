{
  "id": "game-design-v1",
  "name": "Game Design Pipeline V1",
  "description": "4-phase pipeline for creating complete, implementation-ready game design documents from high-level concepts",
  "version": "1.0.0",
  "category": "game-design",
  "stages": [
    {
      "id": "system_design",
      "name": "System Design",
      "type": "designer",
      "agent": "system_designer",
      "description": "Identifies all dependent game systems required for the design",
      "inputs": [
        "user_prompt"
      ],
      "outputs": [
        "systems_list",
        "dependencies_map",
        "design_priorities"
      ]
    },
    {
      "id": "design_review",
      "name": "Design Review",
      "type": "reviewer",
      "agent": "design_reviewer",
      "description": "Reviews identified systems for completeness and gaps",
      "inputs": [
        "systems_list",
        "dependencies_map"
      ],
      "outputs": [
        "review_verdict",
        "missing_systems",
        "recommendations"
      ]
    },
    {
      "id": "design_integration",
      "name": "Design Integration",
      "type": "integrator",
      "agent": "design_integrator",
      "description": "Integrates all systems into cohesive design document",
      "inputs": [
        "systems_list",
        "missing_systems",
        "recommendations"
      ],
      "outputs": [
        "design_document",
        "data_models",
        "implementation_roadmap"
      ]
    },
    {
      "id": "design_validation",
      "name": "Design Validation",
      "type": "validator",
      "agent": "design_validator",
      "description": "Validates design is complete and implementation-ready",
      "inputs": [
        "design_document",
        "data_models",
        "implementation_roadmap"
      ],
      "outputs": [
        "validation_report",
        "verifiable_outputs",
        "final_verdict",
        "implementation_proof"
      ]
    }
  ],
  "flow": {
    "type": "conditional",
    "description": "Iterative refinement with review loops",
    "connections": [
      {
        "from": "system_design",
        "to": "design_review",
        "condition": "design_complete"
      },
      {
        "from": "design_review",
        "to": "design_integration",
        "condition": "approved"
      },
      {
        "from": "design_review",
        "to": "system_design",
        "condition": "needs_revision"
      },
      {
        "from": "design_integration",
        "to": "design_validation",
        "condition": "integration_complete"
      },
      {
        "from": "design_validation",
        "to": "design_integration",
        "condition": "validation_failed"
      }
    ]
  },
  "success_criteria": {
    "final_verdict": "APPROVED",
    "verifiable_outputs": "present",
    "implementation_proof": "complete"
  },
  "use_cases": [
    "Design mining and exploration loops",
    "Create crafting and progression systems",
    "Define combat and ability mechanics",
    "Design economy and trading systems",
    "Specify multiplayer interaction systems"
  ],
  "example_prompts": [
    "Design the mining and anomaly exploration loot cycle to take the loot and craft parts for a ship or build a new ship entirely",
    "Design a skill tree progression system with active abilities and passive bonuses",
    "Create a player-driven economy with resource generation, trading, and market dynamics",
    "Design a combat system with different weapon types, damage calculations, and tactical positioning"
  ]
}
