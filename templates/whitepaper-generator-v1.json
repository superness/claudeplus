{
  "id": "whitepaper-generator-v1",
  "name": "Whitepaper Generator V1",
  "description": "Adversarial whitepaper generation with debate-style agent interactions. Agents challenge each other, defend claims, and must resolve disagreements before proceeding.",
  "version": "1.0.0",
  "category": "documentation",
  "stages": [
    {
      "id": "research_foundation",
      "name": "Research Foundation",
      "type": "researcher",
      "agent": "whitepaper_researcher",
      "description": "Establish research foundation with citations, structure patterns, and evidence mapping",
      "decisions": [
        {"choice": "research_complete", "description": "Research foundation established with citations and structure"}
      ]
    },
    {
      "id": "research_challenge",
      "name": "Research Challenge",
      "type": "reviewer",
      "agent": "skeptic_reviewer",
      "description": "Skeptical review of research foundation - challenge citations and gaps",
      "inputs": ["research_foundation"],
      "decisions": [
        {"choice": "NEEDS_MORE_RESEARCH", "description": "Research has significant gaps that must be addressed"},
        {"choice": "RESEARCH_ADEQUATE", "description": "Research is sufficient to proceed"}
      ]
    },
    {
      "id": "research_defense",
      "name": "Research Defense",
      "type": "researcher",
      "agent": "whitepaper_researcher",
      "description": "Defend research foundation against skeptic challenges",
      "inputs": ["research_challenge"],
      "decisions": [
        {"choice": "RESEARCH_SOLID", "description": "Research defended successfully, proceed"},
        {"choice": "NEEDS_MORE_RESEARCH", "description": "Accepted challenges require more research"}
      ]
    },
    {
      "id": "problem_statement",
      "name": "Problem Statement",
      "type": "author",
      "agent": "problem_definer",
      "description": "Write rigorous problem statement with evidence and scope",
      "inputs": ["research_defense"],
      "decisions": [
        {"choice": "problem_defined", "description": "Problem statement complete with evidence"}
      ]
    },
    {
      "id": "problem_challenge",
      "name": "Problem Challenge",
      "type": "adversary",
      "agent": "devils_advocate",
      "description": "Devil's advocate attacks problem validity and significance",
      "inputs": ["problem_statement"],
      "decisions": [
        {"choice": "PROBLEM_WEAK", "description": "Problem statement is fundamentally weak"},
        {"choice": "PROBLEM_OVERSTATED", "description": "Problem is exaggerated"},
        {"choice": "PROBLEM_VALID", "description": "Problem withstands scrutiny"}
      ]
    },
    {
      "id": "problem_defense",
      "name": "Problem Defense",
      "type": "author",
      "agent": "problem_definer",
      "description": "Defend problem statement against devil's advocate attacks",
      "inputs": ["problem_challenge"],
      "decisions": [
        {"choice": "PROBLEM_DEFINED", "description": "Problem defended successfully"},
        {"choice": "NEEDS_REFRAME", "description": "Problem needs reframing"}
      ]
    },
    {
      "id": "prior_art_analysis",
      "name": "Prior Art Analysis",
      "type": "researcher",
      "agent": "prior_art_analyst",
      "description": "Fair and comprehensive analysis of competing solutions",
      "inputs": ["problem_defense"],
      "decisions": [
        {"choice": "analysis_complete", "description": "Prior art survey complete with gap analysis"}
      ]
    },
    {
      "id": "prior_art_challenge",
      "name": "Prior Art Challenge",
      "type": "adversary",
      "agent": "prior_art_defender",
      "description": "Argue that existing solutions are sufficient",
      "inputs": ["prior_art_analysis"],
      "decisions": [
        {"choice": "GAP_EXISTS", "description": "Acknowledged gap exists despite defense"},
        {"choice": "GAP_UNCLEAR", "description": "Gap claim is questionable"},
        {"choice": "NO_REAL_GAP", "description": "Existing solutions are adequate"}
      ]
    },
    {
      "id": "prior_art_response",
      "name": "Prior Art Response",
      "type": "researcher",
      "agent": "prior_art_analyst",
      "description": "Respond to prior art defender challenges",
      "inputs": ["prior_art_challenge"],
      "decisions": [
        {"choice": "GAP_CLEAR", "description": "Novelty established clearly"},
        {"choice": "GAP_UNCLEAR", "description": "Need to refine gap analysis"},
        {"choice": "NO_GAP", "description": "Cannot establish novelty - abort pipeline"}
      ]
    },
    {
      "id": "protocol_specification",
      "name": "Protocol Specification",
      "type": "author",
      "agent": "protocol_formalizer",
      "description": "Transform specs into formal whitepaper protocol section",
      "inputs": ["prior_art_response"],
      "decisions": [
        {"choice": "spec_complete", "description": "Protocol specification written"}
      ]
    },
    {
      "id": "security_attack",
      "name": "Security Attack",
      "type": "adversary",
      "agent": "security_adversary",
      "description": "Red team attack on protocol security",
      "inputs": ["protocol_specification"],
      "decisions": [
        {"choice": "SECURE_ENOUGH", "description": "No critical vulnerabilities found"},
        {"choice": "FIXABLE_ISSUES", "description": "Issues found but addressable"},
        {"choice": "FUNDAMENTALLY_BROKEN", "description": "Critical security flaws"}
      ]
    },
    {
      "id": "security_defense",
      "name": "Security Defense",
      "type": "author",
      "agent": "protocol_formalizer",
      "description": "Defend protocol against security attacks",
      "inputs": ["security_attack"],
      "decisions": [
        {"choice": "SECURITY_ACCEPTABLE", "description": "All attacks addressed"},
        {"choice": "NEEDS_DESIGN_CHANGE", "description": "Protocol needs modification"}
      ]
    },
    {
      "id": "performance_analysis",
      "name": "Performance Analysis",
      "type": "analyst",
      "agent": "performance_analyst",
      "description": "Performance analysis using real benchmark data",
      "inputs": ["security_defense"],
      "decisions": [
        {"choice": "analysis_complete", "description": "Performance analysis with real numbers"}
      ]
    },
    {
      "id": "social_analysis",
      "name": "Social Analysis",
      "type": "analyst",
      "agent": "social_scientist",
      "description": "Analyze social and behavioral implications",
      "inputs": ["performance_analysis"],
      "decisions": [
        {"choice": "analysis_complete", "description": "Social analysis complete"}
      ]
    },
    {
      "id": "analysis_synthesis",
      "name": "Analysis Synthesis",
      "type": "synthesizer",
      "agent": "synthesis_panel",
      "description": "Synthesize security, performance, and social analyses",
      "inputs": ["performance_analysis", "social_analysis"],
      "decisions": [
        {"choice": "synthesis_complete", "description": "Unified analysis section ready"}
      ]
    },
    {
      "id": "external_critique",
      "name": "External Critique",
      "type": "reviewer",
      "agent": "external_critic_panel",
      "description": "Panel of external critics review the whitepaper draft",
      "inputs": ["analysis_synthesis"],
      "decisions": [
        {"choice": "PAPER_WEAK", "description": "Paper has fundamental problems"},
        {"choice": "PAPER_NEEDS_WORK", "description": "Paper needs revisions"},
        {"choice": "PAPER_STRONG", "description": "Paper is defensible"}
      ]
    },
    {
      "id": "critique_response",
      "name": "Critique Response",
      "type": "author",
      "agent": "whitepaper_author",
      "description": "Address every critique from external panel",
      "inputs": ["external_critique"],
      "decisions": [
        {"choice": "PAPER_DEFENSIBLE", "description": "All critiques addressed"},
        {"choice": "MAJOR_REVISIONS", "description": "Major revisions needed"}
      ]
    },
    {
      "id": "academic_editing",
      "name": "Academic Editing",
      "type": "editor",
      "agent": "academic_editor",
      "description": "Polish for academic publication quality",
      "inputs": ["critique_response"],
      "decisions": [
        {"choice": "editing_complete", "description": "Paper polished and structured"}
      ]
    },
    {
      "id": "peer_review",
      "name": "Peer Review",
      "type": "reviewer",
      "agent": "peer_reviewer",
      "description": "Conference-style peer review pass/fail gate",
      "inputs": ["academic_editing"],
      "decisions": [
        {"choice": "STRONG_ACCEPT", "description": "Ready for publication"},
        {"choice": "WEAK_ACCEPT", "description": "Minor revisions needed"},
        {"choice": "WEAK_REJECT", "description": "Major revisions needed"},
        {"choice": "STRONG_REJECT", "description": "Fundamental problems"}
      ]
    },
    {
      "id": "final_revision",
      "name": "Final Revision",
      "type": "author",
      "agent": "whitepaper_author",
      "description": "Address peer reviewer's required revisions",
      "inputs": ["peer_review"],
      "decisions": [
        {"choice": "revision_complete", "description": "Revisions addressed"}
      ]
    },
    {
      "id": "final_assembly",
      "name": "Final Assembly",
      "type": "author",
      "agent": "whitepaper_author",
      "description": "Assemble final whitepaper document",
      "inputs": ["final_revision"],
      "decisions": [
        {"choice": "paper_complete", "description": "Whitepaper complete and ready"}
      ]
    },
    {
      "id": "pipeline_abort",
      "name": "Pipeline Abort",
      "type": "author",
      "agent": "whitepaper_author",
      "description": "Document why pipeline was aborted and next steps",
      "decisions": [
        {"choice": "abort_documented", "description": "Abort reason documented"}
      ]
    }
  ],
  "flow": {
    "type": "conditional",
    "description": "Adversarial whitepaper generation with debate loops",
    "connections": [
      {
        "from": "research_foundation",
        "to": "research_challenge",
        "condition": "research_complete",
        "description": "Research done, send to skeptic"
      },
      {
        "from": "research_challenge",
        "to": "research_defense",
        "condition": "NEEDS_MORE_RESEARCH",
        "description": "Skeptic found gaps, researcher must defend"
      },
      {
        "from": "research_challenge",
        "to": "research_defense",
        "condition": "RESEARCH_ADEQUATE",
        "description": "Skeptic satisfied, proceed to defense confirmation"
      },
      {
        "from": "research_defense",
        "to": "problem_statement",
        "condition": "RESEARCH_SOLID",
        "description": "Research defended, proceed to problem statement"
      },
      {
        "from": "research_defense",
        "to": "research_foundation",
        "condition": "NEEDS_MORE_RESEARCH",
        "description": "Loop back to strengthen research"
      },
      {
        "from": "problem_statement",
        "to": "problem_challenge",
        "condition": "problem_defined",
        "description": "Problem defined, send to devil's advocate"
      },
      {
        "from": "problem_challenge",
        "to": "problem_defense",
        "condition": "PROBLEM_WEAK",
        "description": "Problem attacked, must defend"
      },
      {
        "from": "problem_challenge",
        "to": "problem_defense",
        "condition": "PROBLEM_OVERSTATED",
        "description": "Problem attacked, must defend"
      },
      {
        "from": "problem_challenge",
        "to": "problem_defense",
        "condition": "PROBLEM_VALID",
        "description": "Problem valid, confirm in defense"
      },
      {
        "from": "problem_defense",
        "to": "prior_art_analysis",
        "condition": "PROBLEM_DEFINED",
        "description": "Problem defended, proceed to prior art"
      },
      {
        "from": "problem_defense",
        "to": "problem_statement",
        "condition": "NEEDS_REFRAME",
        "description": "Loop back to reframe problem"
      },
      {
        "from": "prior_art_analysis",
        "to": "prior_art_challenge",
        "condition": "analysis_complete",
        "description": "Analysis done, send to defender of existing solutions"
      },
      {
        "from": "prior_art_challenge",
        "to": "prior_art_response",
        "condition": "GAP_EXISTS",
        "description": "Defender acknowledges gap, confirm in response"
      },
      {
        "from": "prior_art_challenge",
        "to": "prior_art_response",
        "condition": "GAP_UNCLEAR",
        "description": "Gap unclear, must respond"
      },
      {
        "from": "prior_art_challenge",
        "to": "prior_art_response",
        "condition": "NO_REAL_GAP",
        "description": "No gap claimed, must respond"
      },
      {
        "from": "prior_art_response",
        "to": "protocol_specification",
        "condition": "GAP_CLEAR",
        "description": "Novelty established, proceed to protocol"
      },
      {
        "from": "prior_art_response",
        "to": "prior_art_analysis",
        "condition": "GAP_UNCLEAR",
        "description": "Loop back to refine gap analysis"
      },
      {
        "from": "prior_art_response",
        "to": "pipeline_abort",
        "condition": "NO_GAP",
        "description": "Cannot establish novelty, abort"
      },
      {
        "from": "protocol_specification",
        "to": "security_attack",
        "condition": "spec_complete",
        "description": "Spec done, send to red team"
      },
      {
        "from": "security_attack",
        "to": "security_defense",
        "condition": "SECURE_ENOUGH",
        "description": "No critical issues, confirm in defense"
      },
      {
        "from": "security_attack",
        "to": "security_defense",
        "condition": "FIXABLE_ISSUES",
        "description": "Issues found, must address"
      },
      {
        "from": "security_attack",
        "to": "pipeline_abort",
        "condition": "FUNDAMENTALLY_BROKEN",
        "description": "Critical flaws, abort"
      },
      {
        "from": "security_defense",
        "to": "performance_analysis",
        "condition": "SECURITY_ACCEPTABLE",
        "description": "Security defended, proceed to performance"
      },
      {
        "from": "security_defense",
        "to": "protocol_specification",
        "condition": "NEEDS_DESIGN_CHANGE",
        "description": "Loop back to modify protocol"
      },
      {
        "from": "performance_analysis",
        "to": "social_analysis",
        "condition": "analysis_complete",
        "description": "Performance done, proceed to social"
      },
      {
        "from": "social_analysis",
        "to": "analysis_synthesis",
        "condition": "analysis_complete",
        "description": "Social done, synthesize all analyses"
      },
      {
        "from": "analysis_synthesis",
        "to": "external_critique",
        "condition": "synthesis_complete",
        "description": "Synthesis done, send to external critics"
      },
      {
        "from": "external_critique",
        "to": "critique_response",
        "condition": "PAPER_WEAK",
        "description": "Paper weak, must respond"
      },
      {
        "from": "external_critique",
        "to": "critique_response",
        "condition": "PAPER_NEEDS_WORK",
        "description": "Paper needs work, must respond"
      },
      {
        "from": "external_critique",
        "to": "critique_response",
        "condition": "PAPER_STRONG",
        "description": "Paper strong, proceed to response"
      },
      {
        "from": "critique_response",
        "to": "academic_editing",
        "condition": "PAPER_DEFENSIBLE",
        "description": "Critiques addressed, proceed to editing"
      },
      {
        "from": "critique_response",
        "to": "protocol_specification",
        "condition": "MAJOR_REVISIONS",
        "description": "Major revisions needed, loop back"
      },
      {
        "from": "academic_editing",
        "to": "peer_review",
        "condition": "editing_complete",
        "description": "Editing done, send to peer review"
      },
      {
        "from": "peer_review",
        "to": "final_assembly",
        "condition": "STRONG_ACCEPT",
        "description": "Accepted, proceed to final assembly"
      },
      {
        "from": "peer_review",
        "to": "final_revision",
        "condition": "WEAK_ACCEPT",
        "description": "Minor revisions needed"
      },
      {
        "from": "peer_review",
        "to": "critique_response",
        "condition": "WEAK_REJECT",
        "description": "Major revisions needed, loop back"
      },
      {
        "from": "peer_review",
        "to": "pipeline_abort",
        "condition": "STRONG_REJECT",
        "description": "Fundamental problems, abort"
      },
      {
        "from": "final_revision",
        "to": "final_assembly",
        "condition": "revision_complete",
        "description": "Revisions done, proceed to assembly"
      },
      {
        "from": "final_assembly",
        "to": null,
        "condition": "paper_complete",
        "description": "Whitepaper complete - PIPELINE ENDS"
      },
      {
        "from": "pipeline_abort",
        "to": null,
        "condition": "abort_documented",
        "description": "Abort documented - PIPELINE ENDS"
      }
    ]
  },
  "metadata": {
    "tags": ["whitepaper", "documentation", "adversarial", "academic", "swimchain"],
    "author": "Claude Plus Development System",
    "targetProject": "ChainSocial/Swimchain"
  }
}
