{
  "id": "claude-plus-v1",
  "name": "Claude Plus V1",
  "description": "Revolutionary 4-phase planning-review-execute-validate pipeline",
  "version": "1.0.0",
  "category": "general",
  "stages": [
    {
      "id": "planning",
      "name": "Task Planning",
      "type": "planner",
      "agent": "task_planner",
      "description": "Create detailed implementation plans"
    },
    {
      "id": "review",
      "name": "Expert Review",
      "type": "reviewer",
      "agent": "discerning_expert",
      "description": "Rigorous plan validation and feedback",
      "inputs": ["planning"],
      "decisions": [
        {"choice": "APPROVED", "description": "Plan meets all criteria"},
        {"choice": "REJECTED", "description": "Plan needs major revision"}
      ]
    },
    {
      "id": "execution",
      "name": "Task Execution",
      "type": "executor",
      "agent": "task_executor",
      "description": "Execute the validated plan",
      "inputs": ["review"]
    },
    {
      "id": "validation",
      "name": "Proof Validation",
      "type": "validator",
      "agent": "proof_validator",
      "description": "Final quality assurance and proof verification",
      "inputs": ["planning", "execution"]
    }
  ],
  "flow": {
    "type": "conditional", 
    "description": "Each stage must complete before the next begins",
    "connections": [
      {
        "from": "planning",
        "to": "review",
        "condition": "plan_complete",
        "description": "Submit plan for expert review"
      },
      {
        "from": "review",
        "to": "execution",
        "condition": {
          "type": "decision_equals",
          "value": "APPROVED",
          "description": "Plan approved, proceed to execution"
        }
      },
      {
        "from": "review",
        "to": "planning",
        "condition": {
          "type": "decision_equals",
          "value": "REJECTED", 
          "description": "Plan needs revision, return to planner"
        }
      },
      {
        "from": "execution",
        "to": "validation",
        "condition": "execution_complete",
        "description": "Execution complete, validate results"
      },
      {
        "from": "validation",
        "to": "validation",
        "condition": "approved",
        "description": "PIPELINE COMPLETE - Task successfully validated!"
      },
      {
        "from": "validation",
        "to": "execution",
        "condition": "needs_fixes",
        "description": "Issues found, return to execution for fixes"
      },
      {
        "from": "validation",
        "to": "planning",
        "condition": "fundamental_issue",
        "description": "Fundamental problem, restart planning"
      }
    ]
  }
}