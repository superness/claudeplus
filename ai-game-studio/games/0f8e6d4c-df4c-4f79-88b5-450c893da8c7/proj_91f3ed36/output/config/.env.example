# Cosmic Tic-Tac-Toe Environment Configuration
# Copy to .env and update values for your environment

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cosmic_tictactoe
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_MAX_CONNECTIONS=20
DB_SSL=false

# Redis (Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
# Generate RSA keys: openssl genrsa -out private.pem 2048
#                    openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nYour private key here\n-----END RSA PRIVATE KEY-----
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nYour public key here\n-----END PUBLIC KEY-----
JWT_REFRESH_SECRET=your-refresh-secret-at-least-32-chars
JWT_ISSUER=cosmictictactoe.com

# CORS
CORS_ORIGIN=https://cosmictictactoe.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
